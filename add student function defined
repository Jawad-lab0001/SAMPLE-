def add_student(student_name, student_ID, Course):
     student_name = (input("enter students name: "))
     student_ID = int(input("enter the students ID: "))
     course = input("enter the course you are attending: ")
     result = student_name,  student_ID,  course
     print(f" the student {result} has been added thank you")



add_student("student_name", "student_ID", "Course")
